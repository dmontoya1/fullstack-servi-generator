# Clave secreta para Django (¡cámbiala por una clave única en producción!)
SECRET_KEY=YourSuperSecretKey

# Modo de depuración: True para desarrollo, False para producción
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

###########################################
# Configuración de la base de datos
###########################################
# Estas variables se utilizan cuando se selecciona Postgres o MySQL.
# Para SQLite, se usará el archivo db.sqlite3 en BASE_DIR.
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

###########################################
# Configuración del correo electrónico
###########################################
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password

###########################################
# Configuración de logging para Django
###########################################
DJANGO_LOG_LEVEL=INFO